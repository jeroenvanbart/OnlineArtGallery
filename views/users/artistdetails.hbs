<h1 class="headerbox">Artist Profile</h1>
{{#if artArr}}
<article class="userprofilecard">
        <h2>{{artArr.0.owner.fullName}}</h2>
        <div>
            <img class="profileimage" src="{{artArr.0.owner.profileImgUrl}}" alt="">
        </div>
        <p>{{artArr.0.owner.bio}}</p>
</article>
{{else}}
<article class="userprofilecard">
        <h2>{{userArr.0.fullName}}</h2>
        <div>
            <img class="profileimage" src="{{userArr.0.profileImgUrl}}" alt="">
        </div>
        <p>{{userArr.0.bio}}</p>
</article>

{{/if}}
<hr>
{{#if artArr}}
<h2 class="title">{{artArr.0.owner.fullName}}'s Gallery</h2>
{{else}}
<h2 class="title">{{userArr.0.fullName}}'s Gallery</h2>
{{/if}}
<article class="profileArtcontainer">
{{#if artArr}}
{{#each artArr}}

    <div class="profileartcards">
        <h3>{{title}}</h3>
        <div>
            <img class="artimageprofile" src="{{imageUrl}}" alt="">
        </div>
        <a href="/art/{{id}}/details">See Details</a>
    </div>
{{/each}}
{{else}}
<div class="error-message">
    <h1>This artist has no art to show yet</h1>
</div>
{{/if}}
</article>